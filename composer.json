{
    "name": "userfrosting/userfrosting",
    "type": "project",
    "description": "A secure, modern user management system for PHP.",
    "keywords": ["php user management", "usercake", "bootstrap"],
    "homepage": "https://github.com/userfrosting/UserFrosting",
    "license" : "MIT",
    "authors" : [
        {
            "name": "Alexander Weissman",
            "homepage": "https://alexanderweissman.com"
        }
    ],
    "version": "4.0.0",
    "config": {
        "vendor-dir": "app/vendor"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/lcharette/installers.git"
        }
    ],
    "require": {
        "composer/installers": "dev-master",
        "wikimedia/composer-merge-plugin": "dev-master"
	},
    "extra": {
        "merge-plugin": {
            "include": [
                "sprinkles.json",
                "app/sprinkles/*/composer.json"
            ],
            "recurse": true,
            "replace": false,
            "merge-dev": true,
            "merge-extra": false
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "files" : [
            "app/defines.php",
            "app/helpers.php"
        ]
    }
}
