{
    "name": "userfrosting/userfrosting",
    "type": "project",
    "description": "A secure, modern user management system for PHP.",
    "keywords": ["php user management", "usercake", "bootstrap"],
    "homepage": "https://github.com/userfrosting/UserFrosting",
    "license" : "MIT",
    "authors" : [
        {
            "name": "Alexander Weissman",
            "homepage": "https://alexanderweissman.com"
        }
    ],
    "version": "4.1.0-dev",
    "config": {
        "vendor-dir": "app/vendor"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/userfrosting/installers.git"
        }
    ],
    "require": {
        "php": ">=5.6",
        "ext-gd": "*",
        "composer/installers": "dev-master",
        "wikimedia/composer-merge-plugin": "dev-master"
	},
    "extra": {
        "merge-plugin": {
            "include": [
                "app/sprinkles.json",
                "app/sprinkles/*/composer.json"
            ],
            "recurse": true,
            "replace": false,
            "merge-dev": true,
            "merge-extra": false
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "files" : [
            "app/defines.php"
        ],
        "psr-4": {
            "UserFrosting\\System\\": "app/system/",
            "UserFrosting\\Bakery\\": "app/bakery/"
        }
    },
    "scripts": {
        "migrate" : "UserFrosting\\Bakery\\Migration::run",
        "debug" : "UserFrosting\\Bakery\\Debug::run",
        "build-assets" : "UserFrosting\\Bakery\\Assets::run",
        "bake" : [
            "@composer update",
            "@debug",
            "@build-assets"
        ],
        "post-create-project-cmd" : [
            "@bake",
            "@migrate"
        ]
    }
}
